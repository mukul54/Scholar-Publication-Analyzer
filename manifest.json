{
  "manifest_version": 3,
  "name": "Where Do I Publish - Scholar Venue Analyzer",
  "version": "2.0",
  "description": "Analyzes and groups publication venues from Google Scholar profiles with automatic pagination handling and enhanced reporting",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://scholar.google.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Analyze Scholar Publication Venues",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js"],
      "matches": ["*://scholar.google.com/*"]
    }
  ]
}
